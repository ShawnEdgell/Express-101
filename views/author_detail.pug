extends layout

block content

  h1 Author: #{author.name}
  p (#{author.lifespan})

  div(style='margin-left:20px;margin-top:20px')

    h4 Books

    dl
      each book in author_books
        dt
          a(href=book.url) #{book.title}
        dd #{book.summary}

      else
        p This author has no books.

    // Delete link shown only if the author has no books
    if !author_books.length
      hr
      p
        a.btn.btn-danger(href=author.url+'/delete' onclick="return confirm('Are you sure you want to delete this author?');") Delete this author
    // Update link for the author
    p
      a.btn.btn-primary(href=author.url+'/update') Update Author
