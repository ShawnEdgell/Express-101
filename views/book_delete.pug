extends layout

block content
  h1 #{title}: #{book.title}
  
  if book_instances.length
    p There are #{book_instances.length} book(s) that reference this book:
    ul
      each instance in book_instances
        li #{instance.status} (#{instance.due_back_formatted})

    p Delete the book instances before attempting to delete the book.
  else
    p Are you sure you want to delete this book?
    form(method='post' action='')
      input(type='hidden', name='bookid', value=book._id)
      button.btn.btn-danger(type='submit') Delete
