extends layout

block content
  h1 Genre: #{genre.name}

  if genre_books.length
    p There are books associated with this genre. Please delete the following books before attempting to delete the genre.
    ul
      each book in genre_books
        li
          a(href=book.url) #{book.title}
  else
    p Are you sure you want to delete this Genre?
    form(method='post' action='')
      input(type='hidden', name='genreid', value=genre._id)
      button.btn.btn-danger(type='submit') Delete
