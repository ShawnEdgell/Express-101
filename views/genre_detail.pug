extends layout

block content
  h1 Genre: #{genre.name}

  if genre_books.length
    div(style='margin-left:20px;margin-top:20px')
      h4 Books
      dl
        each book in genre_books
          dt
            a(href=book.url) #{book.title}
          dd #{book.summary}
  else
    p This genre has no books.

  // Add update and delete buttons
  hr
  p
    a.btn.btn-primary(href=genre.url + '/update') Update this genre
  p
    a.btn.btn-danger(href=genre.url + '/delete', onclick="return confirm('Are you sure you want to delete this genre?');") Delete this genre
